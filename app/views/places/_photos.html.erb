<div class="row"><div class="col-12">&nbsp;</div></div>
<div class="row">
    <% @place.photos.each do |photo| %>
        <div class="col-xs-12 col-md-4 col-lg-3 photo">
        <%= link_to image_tag(photo.picture.url, class: 'show-image-size'), photo.picture.url %>
        <% if photo.caption.present? then %>
            <p><%= photo.caption %></p>
        <% end %>
        </div>
    <% end %>
</div>
<%= render :partial => 'add_photo'%>